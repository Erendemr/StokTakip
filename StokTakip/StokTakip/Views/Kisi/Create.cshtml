@model StokTakip.Models.Kisi

<h1>Yeni Kişi Ekle</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="AdSoyad" class="control-label"></label>
        <input asp-for="AdSoyad" class="form-control" />

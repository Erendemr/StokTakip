@model StokTakip.Models.Cihaz

<h1>Cihaz Düzenle</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="CihazId" />
    <div class="form-group">
        <label asp-for="CihazAdi" class="control-label"></label>
        <input asp-for="CihazAdi" class="form-control" />
        <span asp-validation-for="CihazAdi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CihazModeli" class="control-label"></label>
        <input asp-for="CihazModeli" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CihazDurumu" class="control-label"></label>
        <input asp-for="CihazDurumu" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="KisiId" class="control-label">Kişi</label>
        <select asp-for="KisiId" class="form-control" asp-items="ViewBag.Kisiler"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</form>